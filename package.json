{
  "name": "nexus-getting-started",
  "version": "1.0.0",
  "description": "GraphQL Nexus getting started",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist",
    "lint": "eslint --ignore-path .gitignore --ignore-path .prettierignore",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "apollo-server-express": "^2.10.1",
    "dotenv": "^8.2.0",
    "graphql": "^14.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-scalars": "^1.0.6",
    "nexus": "^0.12.0-rc.13"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.2"
  },
  "engines": {
    "node": ">=13"
  },
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nghiepit/nexus-getting-started.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,yml,graphql}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "npm run lint:fix --",
      "git add"
    ]
  },
  "author": {
    "name": "Nghiep",
    "email": "me@nghiepit.dev"
  },
  "license": "MIT"
}
